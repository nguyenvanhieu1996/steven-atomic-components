{
  "compilerOptions": {
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }, 
    // default
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noUnusedParameters": true,
    "newLine": "lf",
    "declaration": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "jest/**/*",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js"
  ]
}
